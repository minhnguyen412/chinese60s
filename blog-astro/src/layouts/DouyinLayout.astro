<script>
  /* ‚îÄ‚îÄ Menu toggle ‚îÄ‚îÄ */
  const toggle = document.querySelector('.menu-toggle')
  const navEl  = document.querySelector('nav')
  toggle?.addEventListener('click', () => {
    navEl?.classList.toggle('show')
    if (toggle) toggle.innerHTML = navEl?.classList.contains('show') ? '‚úï' : '‚ò∞'
  })

  /* ‚îÄ‚îÄ Reading progress ‚îÄ‚îÄ */
  const bar = document.getElementById('progress-bar')
  window.addEventListener('scroll', () => {
    if (!bar) return
    const pct = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)
    bar.style.width = Math.min(100, pct * 100) + '%'
  })

  /* ‚îÄ‚îÄ Script tabs ‚îÄ‚îÄ */
  document.querySelectorAll('.script-tab').forEach(tab => {
    tab.addEventListener('click', () => {
      const key = (tab as HTMLElement).dataset.tab
      document.querySelectorAll('.script-tab').forEach(t => t.classList.remove('active'))
      document.querySelectorAll('.script-panel').forEach(p => p.classList.remove('active'))
      tab.classList.add('active')
      document.getElementById('tab-' + key)?.classList.add('active')
    })
  })

  /* ‚îÄ‚îÄ Image Card ‚îÄ‚îÄ */
  let activeCard    = false
  let isOpening     = false
  let writersList: any[] = []
  let imagesData: any[] = []

  const overlay    = document.getElementById('ic-overlay')!
  const card       = document.getElementById('image-card')!
  const closeBtn   = document.getElementById('ic-close')!
  const icImgWrap  = document.getElementById('ic-img-wrap')!
  const icChar     = document.getElementById('ic-char')!
  const icMeaning  = document.getElementById('ic-meaning')!
  const icPinyin   = document.getElementById('ic-pinyin')!
  const icAudio    = document.getElementById('ic-audio') as HTMLAudioElement
  const icAudioSrc = document.getElementById('ic-audio-src') as HTMLSourceElement
  const icWrap     = document.getElementById('ic-writer-wrap')!

  /* Fetch imagesData.json ‚Äî tokenize script CN sau khi c√≥ data */
  fetch('https://raw.githubusercontent.com/minhnguyen412/chinese60s/refs/heads/main/data/imagesData.json')
    .then(r => r.ok ? r.json() : Promise.reject(r.status))
    .then((data: any[]) => {
      imagesData = data

      // Build map: character string ‚Üí entry (d√πng Map ƒë·ªÉ lookup nhanh)
      const charMap = new Map<string, any>()
      data.forEach(d => { if (d.character) charMap.set(d.character, d) })

      // S·∫Øp x·∫øp keys theo ƒë·ªô d√†i gi·∫£m d·∫ßn ‚Üí match c·ª•m d√†i tr∆∞·ªõc
      const sortedKeys = [...charMap.keys()].sort((a, b) => b.length - a.length)

      // Tokenize 1 d√≤ng text ‚Üí array of {text, entry|null}
      function tokenizeLine(line: string) {
        const tokens: { text: string; entry: any | null }[] = []
        let i = 0
        while (i < line.length) {
          let matched = false
          // Th·ª≠ match t·ª´ d√†i nh·∫•t
          for (const key of sortedKeys) {
            if (line.startsWith(key, i)) {
              tokens.push({ text: key, entry: charMap.get(key)! })
              i += key.length
              matched = true
              break
            }
          }
          if (!matched) {
            // K√Ω t·ª± n√†y kh√¥ng match b·∫•t k·ª≥ entry n√†o ‚Üí plain text
            tokens.push({ text: line[i], entry: null })
            i++
          }
        }
        return tokens
      }

      // Re-render tab-cn
      const tabCn = document.getElementById('tab-cn')!
      const rawLines: string[] = JSON.parse(tabCn.dataset.rawLines || '[]')

      tabCn.innerHTML = ''
      rawLines.forEach((line, lineIdx) => {
        const p = document.createElement('p')
        p.className = 'cn-line'

        const tokens = tokenizeLine(line)
        tokens.forEach(tok => {
          if (tok.entry) {
            const span = document.createElement('span')
            span.className = 'cn-char cn-char--clickable'
            span.dataset.char = tok.text
            span.textContent = tok.text
            span.addEventListener('click', () => showImageCard(tok.entry))
            p.appendChild(span)
          } else {
            // plain text node (d·∫•u c√¢u, kho·∫£ng tr·∫Øng, k√Ω t·ª± kh√¥ng c√≥ trong JSON)
            p.appendChild(document.createTextNode(tok.text))
          }
        })

        tabCn.appendChild(p)
      })
    })
    .catch(err => console.warn('imagesData.json load failed:', err))

  /* Destroy writers */
  function destroyWriters() {
    writersList.forEach(w => { try { w.destroy() } catch (_) {} })
    writersList = []
    icWrap.innerHTML = ''
  }

  /* Open card */
  function showImageCard(data: any) {
    isOpening = true
    setTimeout(() => { isOpening = false }, 150)

    if (activeCard) closeImageCard()

    // Image ho·∫∑c placeholder
    icImgWrap.innerHTML = ''
    if (data.imageSrc) {
      const img = document.createElement('img')
      img.src = data.imageSrc
      img.alt = data.character || ''
      icImgWrap.appendChild(img)
    } else {
      // No-image placeholder: hi·ªán ch·ªØ H√°n l·ªõn
      icImgWrap.innerHTML = `
        <div class="card-no-img">
          <span class="big-char">${data.character || ''}</span>
          <small>no image</small>
        </div>`
    }

    // Text ‚Äî kh√¥ng c√≥ prefix "Meaning:" hay "Pinyin:" ƒë·ªÉ g·ªçn h∆°n
    icChar.textContent    = data.character || ''
    icPinyin.textContent  = data.pinyin    || ''
    icMeaning.innerHTML = data.meaning || ''

    // ·∫®n/hi·ªán meaning box n·∫øu tr·ªëng
    ;(icMeaning as HTMLElement).style.display = data.meaning ? 'block' : 'none'

    // Audio
    if (data.audioSrc) {
      icAudioSrc.src = data.audioSrc
      icAudio.load()
      icAudio.style.display = 'block'
    } else {
      icAudio.style.display = 'none'
    }

    // Xo√° writers c≈©
    destroyWriters()

    // Hi·ªán card + overlay TR∆Ø·ªöC
    overlay.style.display = 'block'
    card.style.display    = 'flex'
    activeCard = true

    // HanziWriter SAU khi card visible (requestAnimationFrame)
    const chars = (data.character || '').split('').filter((c: string) => /[\u4E00-\u9FFF]/.test(c))
    if (chars.length > 0) {
      requestAnimationFrame(() => {
        const size = 88 // fixed 88px nh∆∞ design
        chars.forEach((char: string) => {
          const box = document.createElement('div')
          box.className = 'writer-box'

          const hint = document.createElement('span')
          hint.className = 'writer-hint'
          hint.textContent = '‚ñ∂ tap'
          box.appendChild(hint)

          icWrap.appendChild(box)
          try {
            const w = (window as any).HanziWriter.create(box, char, {
              width: size, height: size, padding: 5,
              showOutline: true,
              strokeAnimationSpeed: 1.5,
              delayBetweenStrokes: 250,
            })
            w.animateCharacter()
            box.addEventListener('click', () => w.animateCharacter())
            writersList.push(w)
          } catch (e) { console.warn('HanziWriter error:', e) }
        })
      })
    }
  }

  /* Close card */
  function closeImageCard() {
    card.style.display    = 'none'
    overlay.style.display = 'none'
    destroyWriters()
    activeCard = false
  }

  /* Close triggers */
  closeBtn.addEventListener('click', closeImageCard)
  overlay.addEventListener('click', closeImageCard)
  document.addEventListener('keydown', e => { if (e.key === 'Escape') closeImageCard() })

  /* Click outside card (not on overlay, since overlay already covers it) */
  document.addEventListener('click', (e) => {
    if (!isOpening && activeCard && !card.contains(e.target as Node) && e.target !== overlay) {
      closeImageCard()
    }
  })

  // Click listeners are added dynamically after JSON fetch above

  /* ‚îÄ‚îÄ Disqus ‚îÄ‚îÄ */
  ;(function () {
    const d = document, s = d.createElement('script')
    s.src = 'https://chinese60s-com.disqus.com/embed.js'
    s.setAttribute('data-timestamp', String(+new Date()))
    ;(d.head || d.body).appendChild(s)
  })()
</script>

